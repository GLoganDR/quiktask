.row
  .col-xs-12
    h3 {{title}}
.row
  .col-xs-3
    form(novalidate, name='priorityForm', role='form')
      .form-group
        label(for='name') Name
        input.form-control#name(name='name', type='text', ng-model='priority.name', required, ng-minlength='3', autofocus)
      .form-group
        label(for='color') Color
        input.form-control#color(name='color', type='color', ng-model='priority.color', required)
      .form-group
        button.btn.btn-success(ng-show='priorityForm.$valid', ng-click='add()') Add Priority
  .col-xs-9

.row
  .col-xs-3
  .col-xs-6
    .panel.panel-default
      .panel-body
        .radio
          label
            input(name='sort', type='radio', ng-model='sort', value='name')
            span Ascending
        .radio
          label
            input(name='sort', type='radio', ng-model='sort', value='-name')
            span Descending
        table.table.table-hover.table-bordered
          thead
            tr
              th Name
              th Color
          tbody
            //- sort by ascending alphabetical orderBy:"name" sort descending alphabetical orderBy:"-name"
            tr(ng-repeat='p in priorities | orderBy:sort')
              td {{p.name}}
              td(ng-style='{"background-color":p.color}')
  .col-xs-3
